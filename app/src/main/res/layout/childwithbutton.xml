<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@id/firstsublayout"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fourthsublayout"
        android:background="@drawable/rounded_conerforchildtwo">
        <com.robosoft.archanakumari.uinoonerecent.RoundedImageVIew
            android:id="@+id/imag3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circularborder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdsubtext1"
            android:text="Friend Request"
            android:layout_toRightOf="@id/imag3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdsubtext2"
            android:text="Alan Devis"
            android:layout_toRightOf="@id/imag3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/thirdsubtext1"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdsubtext3"
            android:text="Hi,Alice I`d like to add you to my contact list"
            android:layout_toRightOf="@id/imag3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/thirdsubtext2"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/thirdsubbtn1"
            android:text="Ignore"
            android:textAllCaps="false"
            android:background="#8181F7"
            android:layout_below="@id/thirdsubtext3"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-5dip"
            android:layout_marginBottom="-8dip"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/thirdsubbtn2"
            android:text="Accept"
            android:textAllCaps="false"
            android:layout_marginLeft="-7dip"
            android:layout_marginRight="-20dip"
            android:layout_toRightOf="@id/thirdsubbtn1"
            android:layout_below="@id/thirdsubtext3"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:background="#00FFBF"
            android:layout_marginBottom="-15dip"/>
    </RelativeLayout>

</RelativeLayout>